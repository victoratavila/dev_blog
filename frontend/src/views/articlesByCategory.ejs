<script>

    const baseURL = 'http://localhost:8080';

    async function deleteArticle(id){
        $('#deleteArticleModal').modal('show');

        $('#deleteArticleBtn').click(() => {
            axios({
                method: 'DELETE',
                url: baseURL + '/article/' + id,
            }).then((result) => {
                if(result.data.result){
                    window.location.reload(true);
                } else {
                    window.location.reload(true);
                }
            }).catch((err) => {
                console.log(err);
            })
        });
    }
</script>

